<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="kr.pjs.booksearch.view.ui.searchInput.SearchInputViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Gray_200">

        <kr.pjs.booksearch.view.ui.custom.CustomSearchView
            android:id="@+id/cv_search"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/base_start"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/base_end"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/rv_search_input"
            android:background="@drawable/shape_rect_corner_12"
            android:hint="@string/hint_input_book_name"
            android:textColorHint="@color/Gray_700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_search_input"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingStart="@dimen/base_start"
            android:paddingTop="10dp"
            android:paddingEnd="@dimen/base_end"
            android:paddingBottom="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_search"
            tools:listitem="@layout/holder_book_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>